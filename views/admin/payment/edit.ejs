<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment"></a>Payment</li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div>
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form update Payment</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST" >
                  <div class="card-body">
                    <div class="form-group">
                        <label for="type">Type</label>
                        <input type="text" name="type" value="<%= payment.type %>" class="form-control" id="type" placeholder="Masukkan type pembayaran" required>
                      </div>
                      <div class="form-group">
                        <label>Banks</label>
                        <div class="select2-purple">
                            <select 
                            class="form-control select2" 
                            data-placeholder="Pilih Rekening"
                            multiple="multiple" 
                            style="width: 100%;" 
                            name="banks" 
                            required 
                            >
                                <% banks.forEach(bank=>{ %>
                                    <option value="<%= bank._id %>"
                                      <% payment.banks.forEach(paymentBank =>{ %>
                                        <% if(bank._id.toString() === paymentBank._id.toString()){ %>
                                          selected
                                       <% } %>
                                        <% }) %>
                                        ><%= bank.name %> - <%= bank.nameBank %> - <%= bank.noRekening %>
                                    </option>
                              <%  }) %>
                              </select>
                        </div>
                      </div>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <%- include ../../partials/footer.ejs %>
  <%- include ../../partials/js.ejs %>
